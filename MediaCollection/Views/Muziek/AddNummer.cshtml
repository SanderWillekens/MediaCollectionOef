@model MediaCollection.Models.Muziek.NummerCreateViewModel

@{
    ViewData["Title"] = "AddNummer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddNummer</h1>

<h4>NummerCreateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNummer" asp-route-id="@Model.AlbumId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speeltijd" class="control-label"></label>
                <input asp-for="Speeltijd" class="form-control" />
                <span asp-validation-for="Speeltijd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beschrijving" class="control-label"></label>
                <input asp-for="Beschrijving" class="form-control" />
                <span asp-validation-for="Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artisten" class="control-label"></label><p></p>
                <select size="6" multiple asp-items="Model.Artisten" asp-for="SelectedArtisten"></select>
                <input asp-for="ArtistToevoegen" />
                <input type="submit" value="Regisseur toevoegen" class="btn btn-secondary" asp-route-artist="true" />
            </div>
            <div class="input-group">
                @for (int i = 0; i < Model.Genres.Count; i++)
                {
                <input type="checkbox" asp-for="Genres[i].Checked" />
                <label>@Model.Genres[i].Naam</label>
                <input type="hidden" asp-for="Genres[i].Naam" />
                <input type="hidden" asp-for="Genres[i].Id" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

