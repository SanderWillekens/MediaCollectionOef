@model IEnumerable<MediaCollection.Models.Muziek.AlbumListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AantalNummers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @item.AantalNummers
            </td>
            <td>
                <img src="@item.ImageSource" alt="@item.Naam"/>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Detail", new { id = item.Id }) |
                <a asp-action="Delete" asp-route-id="@item.Id"
                   onclick="return confirm('Are you sure you want to delete this film?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
